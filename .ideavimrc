set nocompatible

let mapleader = ","

imap jj <Esc>
vmap jj <Esc>

nmap G Gzz
nmap n nzz
nmap <leader>h :split<CR>
nmap <leader>s :source ~/.ideavimrc<CR>
nmap <leader>v :vsplit<CR>
nmap <C-h> <C-w>h
nmap <C-j> <C-w>j
nmap <C-k> <C-w>k
nmap <C-l> <C-w>l

nmap <leader>g :action GotoDeclaration<cr>
nmap <leader>b :action Back<cr>
nmap <leader>f :action Forward<cr>

nmap <leader>t :action GotoFile<cr>
nmap <leader>c :action GotoClass<cr>
nmap <leader>ns :action GotoSymbol<cr>
nmap <leader>nm :action FileStructurePopup<cr>
nmap <leader>d :action ShowErrorDescription<cr>
nmap == :action ReformatCode<cr>

set surround

set splitbelow
set splitright

set nowrap
